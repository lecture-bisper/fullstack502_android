<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:id="@+id/main">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="4dp">

      <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="주소 : " />

      <EditText
        android:id="@+id/et_server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="서버 주소를 입력하세요" />
    </LinearLayout>
  </ScrollView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1">

      <Button
        android:id="@+id/btn_volley_request_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volley String"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="center" />

      <Button
        android:id="@+id/btn_retrofit_request_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit String"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="center" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1">

      <Button
        android:id="@+id/btn_volley_request_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volley Json"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:gravity="center" />

      <Button
        android:id="@+id/btn_retrofit_request_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit Json"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:gravity="center" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_weight="1">

      <Button
        android:id="@+id/btn_url_clear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="주소 삭제"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:gravity="center" />
    </LinearLayout>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#33000000"
    android:layout_marginTop="8dp" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/tv_result"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </ScrollView>
</LinearLayout>











