<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- 안드로이드 기본 앱을 콘텐츠 프로바이더를 이용하여 사용할 경우 권한이 필요함 -->
  <!-- 안드로이드 기기의 하드웨어 정보를 가져오기 위해서 필요한 권한 -->
  <uses-feature
    android:name="android.hardware.telephony"
    android:required="false" />

  <uses-permission android:name="android.permission.CALL_PHONE" /> <!-- 안드로이드 기본 앱 중 주소록 정보를 가져오는 권한 -->
  <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- 안드로이드 기기의 카메라 사용 권한 -->
  <uses-feature
    android:name="android.hardware.camera"
    android:required="false" /> <!-- 안드로이드 카메라 앱 사용 권한 -->
  <uses-permission android:name="android.permission.CAMERA" />

  <application
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.App_20250805">
    <service
      android:name=".MP3Service"
      android:enabled="true"
      android:exported="true"></service>

    <activity
      android:name=".MP3PlayerActivity"
      android:exported="false" />
    <activity
      android:name=".PhotoActivity"
      android:exported="false" />
    <activity
      android:name=".ProviderActivity"
      android:exported="false" />

    <service
      android:name=".MyService"
      android:enabled="true"
      android:exported="true" />
    <service
      android:name=".TimeService"
      android:enabled="true"
      android:exported="true" />

    <activity
      android:name=".ServiceActivity"
      android:exported="false" />

    <receiver
      android:name=".MyReceiver"
      android:enabled="true"
      android:exported="true" />

    <activity
      android:name=".ReceiverActivity"
      android:exported="false" />
    <activity
      android:name=".MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>