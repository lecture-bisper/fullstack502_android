<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitc.full502.backend_server.mapper.BoardMapper">

  <select id="selectBoardList" resultType="bitc.full502.backend_server.dto.BoardDTO">
    SELECT * FROM t_board
  </select>

  <select id="selectBoardDetail" parameterType="int" resultType="bitc.full502.backend_server.dto.BoardDTO">
    SELECT * FROM t_board
    WHERE board_idx = #{boardIdx}
  </select>
</mapper>