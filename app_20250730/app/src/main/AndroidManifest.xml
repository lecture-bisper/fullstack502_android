<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <application
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.App_20250730">
    <activity
      android:name=".LifeCycleActivity"
      android:exported="false" />
    <!-- 사용자가 직접 만든 엑티비티 등록 -->
    <activity
      android:name=".UserActivity"
      android:exported="false" /> <!-- 툴에서 자동으로 생성하여 등록한 엑티비티 -->
    <activity
      android:name=".IntentFilterActivity"
      android:exported="true">

      <!-- 인텐트 필터 : 안드로이드 시스템에 현재 앱에서 사용하는 클래스를 등록하기 위한 기능 -->
      <!-- 명시적 인텐트 : 내부 앱은 인텐트 필터 없이 클래스명으로 엑티비티 사용 가능 -->
      <!-- 암시적 인텐트 : 외부 앱은 지정한 앱의 클래스명을 확인할 수 없으므로 인텐트 필터를 통해서 지정한 앱에서 제공하는 엑티비티의 정보를 받아서 사용 -->
      <!-- 하나의 엑티비티에 여러개의 인텐트 필터를 사용할 수 있음 -->
      <!-- <action> : 외부 앱에서 인식할 수 있는 엑티비티 이름 설정 -->
      <!-- <category> : 안드로이드 시스템이 지정해 놓은 기능에 대한 구분 -->
      <!-- DEFAULT : 가장 기본적인 카테고리, startActivity() 사용 시 DEFAULT 카테고리 사용 -->
      <!-- BROWSABLE : 외부(브라우저) 에서 앱을 열 수 있도록 허용 -->
      <!-- LAUNCHER : 홈 화면에서 앱 아이콘을 클릭 시 실행되는 엑티비티 설정 -->
      <!-- HOME : 런처 앱 사용 시 기본 홈 앱 역할을 하도록 설정 -->
      <!-- <data> : 엑티비티 필터를 통해서 엑티비티를 호출할 때 필요한 데이터 설정 -->
      <!-- android:exported="true" : 외부 앱에 지정한 엑티비티 공개 -->
      <intent-filter>
        <action android:name="IntentFilterTest" />

        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
    <activity
      android:name=".CalculatorActivity"
      android:exported="false" />
    <activity
      android:name=".ParamActivity"
      android:exported="false" />
    <activity
      android:name=".DetailActivity"
      android:exported="false" />
    <activity
      android:name=".MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>